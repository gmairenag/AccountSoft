@model AccountSoft.Models.Anio_Fiscal

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">
        Registro de Año Fiscal
    </h4>
</div>

<div class="modal-body">
    <form action="@Url.Action("create","Anio_Fiscal")" method="POST">
        @Html.AntiForgeryToken()
        <fieldset>
            <section>
                <label>Código</label>
                <input class="form-control" name="id_anio_fiscal" id="id_anio_fiscal" type="text">
            </section>
            <section>
                <label>Descripción</label>
                <input class="form-control" name="descripcion" id="descripcion" type="text">
            </section>
            <section>
                <label>Fecha Inicio</label>
                <input class="form-control"  type="text" name="fecha_inicio" id="fecha_inicio" />
            </section>
            <section>
                <label>Fecha Fin</label>
                <input class="form-control" type="text" name="fecha_fin" id="fecha_fin" />
            </section>
            <section>
                <label>Año Abierto  <input type="checkbox" value="true" name="abierto"  id="abierto" ></label>      
            </section>
        </fieldset>
        <footer>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
        </footer>
    </form>
</div>

<script src="../Scripts/jquery.maskedinput.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function($){
        $("#fecha_inicio").mask("99/99/9999");
    });
</script>
<script type="text/javascript">
    $(function($){
       $("#fecha_fin").mask("99/99/9999");
    });
</script>
