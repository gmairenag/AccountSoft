@model AccountSoft.ViewModels.AgregarPeriodoVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">
        Registro de Periodo
    </h4>
</div>

<div class="modal-body">
    <form action="@Url.Action("AgregarPeriodo","anio_fiscal")"  method="POST">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.id_anio_fiscal)
        <fieldset>
            @*<section>
                <label>Código</label>
                <input class="form-control" name="id_periodo" id="id_periodo" type="text">
            </section>*@
            <section>
                <label>Fecha Inicio</label>
                <input class="form-control" type="text" name="fecha_inicio" id="fecha_inicio" />
            </section>
            <section>
                <label>Fecha Fin</label>
                <input class="form-control" type="text" name="fecha_fin" id="fecha_fin" />
            </section>
            <section>
                <label>Tipo Periodo</label>
                <input class="form-control" name="tipo_periodo" id="tipo_periodo" type="text">
            </section>
            <section>
                <label>Año Abierto  <input type="checkbox" value="true" name="abierto" id="abierto"></label>
            </section>
        </fieldset>
        <footer>
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Salir</button>
        </footer>
    </form>
</div>

<script src="../Scripts/jquery.maskedinput.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function($){
        $("#fecha_inicio").mask("99/99/9999");
    });
</script>
<script type="text/javascript">
    $(function($){
       $("#fecha_fin").mask("99/99/9999");
    });
</script>
